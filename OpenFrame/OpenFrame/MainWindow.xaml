<Window x:Class="OpenFrame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFrame" 
        xmlns:uc="clr-namespace:OpenFrame.Controls"
        mc:Ignorable="d"
        Title="FPV Footage Manager - Technical Preview" 
        Height="800" Width="1200"
        Style="{DynamicResource AppWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="{DynamicResource PaddingMedium}"
                BorderBrush="{DynamicResource BorderPrimaryBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Vertical">

                <!-- Primary Actions -->
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="OpenVideoButton" 
                            Content="Open Video File" 
                            Click="OpenVideoButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="{DynamicResource PaddingLarge}"
                            Height="50"/>

                    <TextBlock x:Name="CurrentFileLabel" 
                              Text="No video loaded" 
                              Style="{DynamicResource CaptionTextStyle}"
                              VerticalAlignment="Center" 
                              Margin="{DynamicResource PaddingLarge}"/>
                </StackPanel>

                <!-- Secondary Actions -->
                <StackPanel Orientation="Horizontal" 
                           Margin="0,10,0,0">
                    <Button x:Name="SaveSidecarButton" 
                            Content="Save Sidecar" 
                            Click="SaveSidecarButton_Click"
                            Style="{DynamicResource SuccessButtonStyle}"
                            Padding="{DynamicResource PaddingLarge}"
                            Height="50"/>

                    <Button x:Name="ReloadSidecarButton" 
                            Content="Reload Sidecar" 
                            Click="ReloadSidecarButton_Click"
                            Style="{DynamicResource BaseButtonStyle}"
                            Padding="{DynamicResource PaddingLarge}"
                            Margin="{DynamicResource PaddingMedium}"
                            Height="50"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundDarkBrush}" 
                Margin="{DynamicResource PaddingMedium}">
            <uc:VideoPreviewControl x:Name="VideoPreview"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="{DynamicResource PaddingMedium}"
                BorderBrush="{DynamicResource BorderPrimaryBrush}"
                BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusLabel" 
                      Text="Ready" 
                      Style="{DynamicResource CaptionTextStyle}"/>
        </Border>

        <!-- Right Sidebar -->
        <Grid Grid.Column="1" Grid.RowSpan="3">
            <uc:FolderTreeControl x:Name="FolderTree"></uc:FolderTreeControl>
        </Grid>
    </Grid>
</Window>