<UserControl x:Class="OpenFrame.Controls.VideoPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenFrame.Controls" 
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF" xmlns:lucideIcons="clr-namespace:LucideIcons;assembly=LucideIcons"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Include Lucide Icon Styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OpenFrame;component/Styles/LucideIconStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Video Display Area -->
        <Border Grid.Row="0" 
                Background="Black" 
                Margin="{DynamicResource PaddingSmall}"
                CornerRadius="{DynamicResource CornerRadiusSubtle}">
            <Grid>
                <!-- VLC Video View -->
                <vlc:VideoView x:Name="VideoView" 
                               Background="Transparent"
                               MediaPlayer="{Binding MediaPlayer}"/>

                <!-- Overlay for no video state -->
                <Border x:Name="NoVideoOverlay" 
                       Background="#AA000000"
                       CornerRadius="{DynamicResource CornerRadiusSubtle}"
                       Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <lucideIcons:Icon LucideIcon="Video" 
                                         Style="{StaticResource LargeIconStyle}"
                                         HorizontalAlignment="Center" 
                                         Margin="0,0,0,10"/>
                        <TextBlock Text="No video loaded" 
                                  Style="{DynamicResource HeadingH2Style}"
                                  HorizontalAlignment="Center" 
                                  Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Text="Use 'Open Video File' to load a video" 
                                  Style="{DynamicResource CaptionTextStyle}"
                                  HorizontalAlignment="Center" 
                                  Foreground="{DynamicResource DisabledTextBrush}" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="{DynamicResource PaddingMedium}"
                CornerRadius="{DynamicResource CornerRadiusSubtle}"
                Margin="{DynamicResource PaddingSmall}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Timeline Control -->
                <local:TimelineControl x:Name="timelineControl"
                                   Grid.Row="0" 
                                   Margin="0,0,0,10"/>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10">

                    <!-- Frame Step Backward -->
                    <Button x:Name="FrameBackwardButton" 
                           Click="FrameBackwardButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Previous Frame">
                        <lucideIcons:Icon LucideIcon="SkipBack" Style="{StaticResource ButtonIconStyle}"/>
                    </Button>

                    <!-- 10 Seconds Backward -->
                    <Button x:Name="Skip10BackwardButton" 
                           Click="Skip10BackwardButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Skip 10s Back">
                        <lucideIcons:Icon LucideIcon="Rewind" Style="{StaticResource ButtonIconStyle}"/>
                    </Button>

                    <!-- Play/Pause -->
                    <Button x:Name="PlayPauseButton" 
                           Click="PlayPauseButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource PrimaryButtonStyle}"
                           Width="45" Height="30"
                           Margin="5">
                        <lucideIcons:Icon x:Name="PlayPauseIcon" 
                                         LucideIcon="Play" 
                                         Style="{StaticResource ButtonIconStyle}"
                                         Width="18" Height="18"/>
                    </Button>

                    <!-- Stop -->
                    <Button x:Name="StopButton" 
                           Click="StopButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Stop / Reset">
                        <lucideIcons:Icon LucideIcon="Square" Style="{StaticResource ButtonIconStyle}"/>
                    </Button>

                    <!-- 10 Seconds Forward -->
                    <Button x:Name="Skip10ForwardButton" 
                           Click="Skip10ForwardButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Skip 10s Forward">
                        <lucideIcons:Icon LucideIcon="FastForward" Style="{StaticResource ButtonIconStyle}"/>
                    </Button>

                    <!-- Frame Step Forward -->
                    <Button x:Name="FrameForwardButton" 
                           Click="FrameForwardButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Next Frame">
                        <lucideIcons:Icon LucideIcon="SkipForward" Style="{StaticResource ButtonIconStyle}"/>
                    </Button>

                    <!-- Separator -->
                    <Rectangle Width="1" 
                              Height="20" 
                              Fill="{DynamicResource BorderPrimaryBrush}" 
                              Margin="10,0"/>

                    <!-- Add Marker Button -->
                    <Button x:Name="AddMarkerButton" 
                           Click="AddMarkerButton_Click"
                           IsEnabled="False"
                           Style="{DynamicResource BaseButtonStyle}"
                           Background="{DynamicResource WarningBrush}"
                           BorderBrush="{DynamicResource WarningBrush}"
                           Width="35" Height="30"
                           Margin="2"
                           ToolTip="Add Marker">
                        <lucideIcons:Icon LucideIcon="Bookmark" 
                                         Style="{StaticResource BaseIconStyle}"
                                         Stroke="Black"/>
                    </Button>
                </StackPanel>

                <!-- Volume and Info -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Volume:" 
                              Style="{DynamicResource BodyTextStyle}"
                              VerticalAlignment="Center" 
                              Margin="10,0,5,0"/>

                    <Slider x:Name="VolumeSlider" 
                           Minimum="0" 
                           Maximum="200" 
                           Value="100"
                           Width="80"
                           VerticalAlignment="Center"
                           ValueChanged="VolumeSlider_ValueChanged"
                           Foreground="{DynamicResource PrimaryAccentBrush}"/>

                    <TextBlock x:Name="VolumeLabel" 
                              Text="100%" 
                              Style="{DynamicResource CodeTextStyle}"
                              VerticalAlignment="Center" 
                              Margin="5,0,0,0"
                              Width="35"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>