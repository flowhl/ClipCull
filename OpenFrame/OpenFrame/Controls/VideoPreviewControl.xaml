<UserControl x:Class="OpenFrame.Controls.VideoPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenFrame.Controls" xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF" xmlns:lucideIcons="clr-namespace:LucideIcons;assembly=LucideIcons"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Video Display Area -->
        <Border Grid.Row="0" Background="Black" Margin="5">
            <Grid>
                <!-- VLC Video View -->
                <vlc:VideoView x:Name="VideoView" 
                               Background="Transparent"
                               MediaPlayer="{Binding MediaPlayer}"/>

                <!-- Overlay for no video state -->
                <Border x:Name="NoVideoOverlay" 
                       Background="#AA000000"
                       Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <lucideIcons:Icon LucideIcon="Video" Height="48" Width="48" Stroke="#FF666666" StrokeWidth="1.5" 
                                         HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No video loaded" 
                                  FontSize="16" 
                                  HorizontalAlignment="Center" 
                                  Foreground="#FF999999"/>
                        <TextBlock Text="Use 'Open Video File' to load a video" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center" 
                                  Foreground="#FF666666" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="#FF2D2D30" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Timeline Control -->
                <local:TimelineControl x:Name="timelineControl"
                                   Grid.Row="0" 
                                   Margin="0,0,0,10"/>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <!-- Frame Step Backward -->
                    <Button x:Name="FrameBackwardButton" 
                           Click="FrameBackwardButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           BorderThickness="0"
                           ToolTip="Previous Frame"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="SkipBack" Height="16" Width="16" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <!-- 10 Seconds Backward -->
                    <Button x:Name="Skip10BackwardButton" 
                           Click="Skip10BackwardButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           BorderThickness="0"
                           ToolTip="Skip 10s Back"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="Rewind" Height="16" Width="16" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <!-- Play/Pause -->
                    <Button x:Name="PlayPauseButton" 
                           Click="PlayPauseButton_Click"
                           IsEnabled="False"
                           Width="45" Height="30"
                           Margin="5"
                           Background="#FF007ACC"
                           Foreground="White"
                           BorderThickness="0"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon x:Name="PlayPauseIcon" LucideIcon="Play" Height="18" Width="18" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <!-- Stop -->
                    <Button x:Name="StopButton" 
                           Click="StopButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           BorderThickness="0"
                           ToolTip="Stop / Reset"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="Square" Height="16" Width="16" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <!-- 10 Seconds Forward -->
                    <Button x:Name="Skip10ForwardButton" 
                           Click="Skip10ForwardButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           BorderThickness="0"
                           ToolTip="Skip 10s Forward"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="FastForward" Height="16" Width="16" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <!-- Frame Step Forward -->
                    <Button x:Name="FrameForwardButton" 
                           Click="FrameForwardButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           BorderThickness="0"
                           ToolTip="Next Frame"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="SkipForward" Height="16" Width="16" Stroke="White" StrokeWidth="1.5"/>
                    </Button>

                    <Separator Width="15" Background="Transparent"/>

                    <!-- Add Marker Button -->
                    <Button x:Name="AddMarkerButton" 
                           Click="AddMarkerButton_Click"
                           IsEnabled="False"
                           Width="35" Height="30"
                           Margin="2"
                           Background="#FFFFD700"
                           Foreground="Black"
                           BorderThickness="0"
                           ToolTip="Add Marker"
                           Style="{DynamicResource ControlButtonStyle}">
                        <lucideIcons:Icon LucideIcon="Bookmark" Height="16" Width="16" Stroke="Black" StrokeWidth="1.5"/>
                    </Button>
                </StackPanel>

                <!-- Volume and Info -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Volume:" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="10,0,5,0"/>

                    <Slider x:Name="VolumeSlider" 
                           Minimum="0" 
                           Maximum="200" 
                           Value="100"
                           Width="80"
                           VerticalAlignment="Center"
                           ValueChanged="VolumeSlider_ValueChanged"/>

                    <TextBlock x:Name="VolumeLabel" 
                              Text="100%" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="5,0,0,0"
                              Width="35"
                              FontFamily="Consolas"
                              FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Resources>
        <!-- Control Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>