<Application x:Class="OpenFrame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenFrame"
             xmlns:lucideIcons="clr-namespace:LucideIcons;assembly=LucideIcons" xmlns:sys="clr-namespace:System;assembly=netstandard"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ============================================ -->
        <!-- COLOR PALETTE -->
        <!-- ============================================ -->

        <!-- Primary Colors -->
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FF404040"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="#FF555555"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF333333"/>

        <!-- Accent Colors -->
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF32CD32"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFFFD700"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF6666"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#FF87CEEB"/>

        <!-- Text Colors -->
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="DisabledTextBrush" Color="#FF888888"/>
        <SolidColorBrush x:Key="AccentTextBrush" Color="#FF007ACC"/>

        <!-- Border Colors -->
        <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#FF666666"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="#FF888888"/>
        <SolidColorBrush x:Key="BorderFocusBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="BorderErrorBrush" Color="#FFFF6666"/>

        <!-- Tag Colors -->
        <SolidColorBrush x:Key="TagForestBrush" Color="#FF228B22"/>
        <SolidColorBrush x:Key="TagMountainsBrush" Color="#FF8B4513"/>
        <SolidColorBrush x:Key="TagFactoryBrush" Color="#FF708090"/>
        <SolidColorBrush x:Key="TagFieldBrush" Color="#FF32CD32"/>
        <SolidColorBrush x:Key="TagHighlightBrush" Color="#FFFFD700"/>

        <!-- ============================================ -->
        <!-- TYPOGRAPHY -->
        <!-- ============================================ -->

        <!-- Font Families -->
        <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
        <FontFamily x:Key="MonoFontFamily">Consolas</FontFamily>

        <!-- Font Sizes -->
        <sys:Double x:Key="FontSizeH1">18</sys:Double>
        <sys:Double x:Key="FontSizeH2">16</sys:Double>
        <sys:Double x:Key="FontSizeBody">12</sys:Double>
        <sys:Double x:Key="FontSizeCaption">10</sys:Double>
        <sys:Double x:Key="FontSizeCode">11</sys:Double>

        <!-- ============================================ -->
        <!-- SPACING & DIMENSIONS -->
        <!-- ============================================ -->

        <Thickness x:Key="PaddingMicro">2</Thickness>
        <Thickness x:Key="PaddingSmall">5</Thickness>
        <Thickness x:Key="PaddingMedium">10</Thickness>
        <Thickness x:Key="PaddingLarge">15</Thickness>
        <Thickness x:Key="PaddingXLarge">20</Thickness>

        <CornerRadius x:Key="CornerRadiusSharp">0</CornerRadius>
        <CornerRadius x:Key="CornerRadiusSubtle">3</CornerRadius>
        <CornerRadius x:Key="CornerRadiusRounded">6</CornerRadius>
        <CornerRadius x:Key="CornerRadiusPill">15</CornerRadius>

        <!-- ============================================ -->
        <!-- BASE CONTROL STYLES -->
        <!-- ============================================ -->

        <!-- Window Style -->
        <Style x:Key="AppWindowStyle" TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- UserControl Style -->
        <Style x:Key="AppUserControlStyle" TargetType="UserControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- ============================================ -->
        <!-- BUTTON STYLES -->
        <!-- ============================================ -->

        <!-- Base Button Style -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{StaticResource PaddingSmall}"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource CornerRadiusSubtle}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DisabledTextBrush}"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0099FF"/>
                    <Setter Property="BorderBrush" Value="#FF0099FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0066CC"/>
                    <Setter Property="BorderBrush" Value="#FF0066CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF50FF50"/>
                    <Setter Property="BorderBrush" Value="#FF50FF50"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF28A428"/>
                    <Setter Property="BorderBrush" Value="#FF28A428"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Error Button Style -->
        <Style x:Key="ErrorButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFF8888"/>
                    <Setter Property="BorderBrush" Value="#FFFF8888"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFCC4444"/>
                    <Setter Property="BorderBrush" Value="#FFCC4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ============================================ -->
        <!-- TEXT STYLES -->
        <!-- ============================================ -->

        <!-- Heading 1 Style -->
        <Style x:Key="HeadingH1Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeH1}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Heading 2 Style -->
        <Style x:Key="HeadingH2Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeH2}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Body Text Style -->
        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="LineHeight" Value="16"/>
        </Style>

        <!-- Caption Text Style -->
        <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        </Style>

        <!-- Code Text Style -->
        <Style x:Key="CodeTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeCode}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        </Style>

        <!-- Accent Text Style -->
        <Style x:Key="AccentTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ============================================ -->
        <!-- INPUT CONTROL STYLES -->
        <!-- ============================================ -->

        <!-- TextBox Style -->
        <Style x:Key="AppTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{StaticResource PaddingSmall}"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource PrimaryAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource CornerRadiusSubtle}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource BorderFocusBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="AppComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{StaticResource PaddingSmall}"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        </Style>

        <!-- ============================================ -->
        <!-- PANEL STYLES -->
        <!-- ============================================ -->

        <!-- Card Panel Style -->
        <Style x:Key="CardPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusRounded}"/>
            <Setter Property="Padding" Value="{StaticResource PaddingMedium}"/>
            <Setter Property="Margin" Value="{StaticResource PaddingSmall}"/>
        </Style>

        <!-- Section Panel Style -->
        <Style x:Key="SectionPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="{StaticResource PaddingMedium}"/>
        </Style>

        <!-- ============================================ -->
        <!-- TAG STYLES -->
        <!-- ============================================ -->

        <!-- Base Tag Style -->
        <Style x:Key="BaseTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusPill}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Forest Tag Style -->
        <Style x:Key="ForestTagStyle" TargetType="Border" BasedOn="{StaticResource BaseTagStyle}">
            <Setter Property="Background" Value="{StaticResource TagForestBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TagForestBrush}"/>
        </Style>

        <!-- Mountains Tag Style -->
        <Style x:Key="MountainsTagStyle" TargetType="Border" BasedOn="{StaticResource BaseTagStyle}">
            <Setter Property="Background" Value="{StaticResource TagMountainsBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TagMountainsBrush}"/>
        </Style>

        <!-- Factory Tag Style -->
        <Style x:Key="FactoryTagStyle" TargetType="Border" BasedOn="{StaticResource BaseTagStyle}">
            <Setter Property="Background" Value="{StaticResource TagFactoryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TagFactoryBrush}"/>
        </Style>

        <!-- Field Tag Style -->
        <Style x:Key="FieldTagStyle" TargetType="Border" BasedOn="{StaticResource BaseTagStyle}">
            <Setter Property="Background" Value="{StaticResource TagFieldBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TagFieldBrush}"/>
        </Style>

        <!-- Highlight Tag Style -->
        <Style x:Key="HighlightTagStyle" TargetType="Border" BasedOn="{StaticResource BaseTagStyle}">
            <Setter Property="Background" Value="{StaticResource TagHighlightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TagHighlightBrush}"/>
        </Style>

        <!-- ============================================ -->
        <!-- SCROLLBAR STYLES -->
        <!-- ============================================ -->

        <!-- ScrollBar Style -->
        <Style x:Key="AppScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BorderPrimaryBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" 
                                     RadiusX="6" RadiusY="6"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Rectangle Fill="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground}" 
                                                         RadiusX="6" RadiusY="6"
                                                         Margin="2"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ============================================ -->
        <!-- GLOBAL OVERRIDES -->
        <!-- ============================================ -->

        <!-- Apply window style to all windows by default -->
        <Style TargetType="Window" BasedOn="{StaticResource AppWindowStyle}"/>

        <!-- Apply usercontrol style to all usercontrols by default -->
        <Style TargetType="UserControl" BasedOn="{StaticResource AppUserControlStyle}"/>

        <!-- Apply textbox style to all textboxes by default -->
        <Style TargetType="TextBox" BasedOn="{StaticResource AppTextBoxStyle}"/>

        <!-- Apply combobox style to all comboboxes by default -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource AppComboBoxStyle}"/>

        <!-- Apply scrollbar style to all scrollbars by default -->
        <Style TargetType="ScrollBar" BasedOn="{StaticResource AppScrollBarStyle}"/>

    </Application.Resources>
</Application>
