<UserControl x:Class="ClipCull.Controls.VideoClipBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipCull.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:ClipCull.Controls.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             x:Name="UserControlRoot">

    <UserControl.Resources>
        <!-- Video Clip Item Data Template -->
        <DataTemplate x:Key="VideoClipItemTemplate">
            <Border Background="{StaticResource SecondaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Margin="2"
            Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Checkbox -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Icon -->
                        <ColumnDefinition Width="120"/>
                        <!-- Thumbnail -->
                        <ColumnDefinition Width="*"/>
                        <!-- Content -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Action Buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Selection Checkbox -->
                    <CheckBox Grid.Column="0"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                      VerticalAlignment="Top"
                      Margin="0,0,8,0"
                      ToolTip="Select this clip"/>

                    <!-- Clip Type Icon -->
                    <Border Grid.Column="1"
                    Width="24"
                    Height="24"
                    Background="Transparent"
                    VerticalAlignment="Top"
                    Margin="0,0,8,0">
                        <Grid>
                            <!-- Main Clip Icon -->
                            <materialDesign:PackIcon x:Name="MainClipIcon"
                                            Kind="Video"
                                            Width="16"
                                            Height="16"
                                            Foreground="{StaticResource AccentBrush}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ToolTip="Main Clip">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMainClip}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>

                            <!-- Sub Clip Icon -->
                            <materialDesign:PackIcon x:Name="SubClipIcon"
                                            Kind="ContentCut"
                                            Width="16"
                                            Height="16"
                                            Foreground="{StaticResource MutedForegroundBrush}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ToolTip="Sub Clip">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSubClip}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Border>

                    <!-- Thumbnail -->
                    <Border Grid.Column="2"
                    Background="{StaticResource MutedBrush}"
                    CornerRadius="4"
                    Width="110"
                    Height="62"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                        <Grid>
                            <!-- Thumbnail Image -->
                            <Image x:Name="ThumbnailImage"
                           Source="{Binding ThumbnailPath}"
                           Stretch="UniformToFill"
                           StretchDirection="Both"
                           RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLoadingThumbnail}" Value="True">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- Loading Indicator -->
                            <ProgressBar x:Name="ThumbnailProgress"
                                IsIndeterminate="True"
                                Width="40"
                                Height="4"
                                Foreground="{StaticResource AccentBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLoadingThumbnail}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>

                            <!-- Duration Badge -->
                            <Border Background="#80000000"
                            CornerRadius="2"
                            Padding="4,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="4">
                                <TextBlock Text="{Binding DurationString}"
                                   FontFamily="{StaticResource FontMono}"
                                   FontSize="10"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                            </Border>

                            <!-- Color Stripe -->
                            <Rectangle Fill="{Binding ClipColorBrush}"
                               Height="4"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Grid Grid.Column="3" Margin="12,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Main title row -->
                            <RowDefinition Height="Auto"/>
                            <!-- Metadata row -->
                            <RowDefinition Height="Auto"/>
                            <!-- Time range row -->
                            <RowDefinition Height="Auto"/>
                            <!-- Rating and Pick row -->
                            <RowDefinition Height="Auto"/>
                            <!-- Tags row -->
                        </Grid.RowDefinitions>

                        <!-- Title and File Name Row -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Primary Title (UserMetadata.Title or ClipTitle) -->
                            <TextBlock Grid.Column="0"
                               FontFamily="{StaticResource FontSans}"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{StaticResource ForegroundBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="350">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="ClipTitle"/>
                                        <Binding Path="UserMetadata.Title"/>
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- File name (show only for first clip of file) -->
                            <TextBlock Grid.Column="1"
                               Text="{Binding VideoFileName}"
                               FontFamily="{StaticResource FontSans}"
                               FontSize="11"
                               Foreground="{StaticResource MutedForegroundBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="200"
                               HorizontalAlignment="Right">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFirstClipOfFile}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- Description and Location Row -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                            <!-- Description -->
                            <TextBlock Text="{Binding UserMetadata.Description}"
                               FontFamily="{StaticResource FontSans}"
                               FontSize="12"
                               Foreground="{StaticResource MutedForegroundBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="250">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UserMetadata.Description, Converter={x:Static conv:StringNullOrEmptyConverter.Instance}}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Separator (only if both description and location exist) -->
                            <TextBlock Text=" • "
                               FontFamily="{StaticResource FontSans}"
                               FontSize="12"
                               Foreground="{StaticResource MutedForegroundBrush}"
                               Margin="4,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding UserMetadata.Description, Converter={x:Static conv:StringNullOrEmptyConverter.Instance}}" Value="False"/>
                                                    <Condition Binding="{Binding UserMetadata.Location, Converter={x:Static conv:StringNullOrEmptyConverter.Instance}}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Location -->
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MapMarker"
                                                Width="12"
                                                Height="12"
                                                Foreground="{StaticResource MutedForegroundBrush}"
                                                VerticalAlignment="Center"
                                                Margin="0,0,4,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Location, Converter={x:Static conv:StringNullOrEmptyConverter.Instance}}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <TextBlock Text="{Binding UserMetadata.Location}"
                                   FontFamily="{StaticResource FontSans}"
                                   FontSize="12"
                                   Foreground="{StaticResource MutedForegroundBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="150">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Location, Converter={x:Static conv:StringNullOrEmptyConverter.Instance}}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- Time Range -->
                        <TextBlock Grid.Row="2"
                           FontFamily="{StaticResource FontMono}"
                           FontSize="12"
                           Foreground="{StaticResource MutedForegroundBrush}"
                           Margin="0,4,0,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="StartTimeDisplay"/>
                                    <Binding Path="EndTimeDisplay"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <!-- Rating and Pick Status Row -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                            <!-- Rating Stars -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <!-- Star 1 -->
                                <materialDesign:PackIcon Kind="Star" Width="12" Height="12" Margin="0,0,1,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource MutedForegroundBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=0}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFBBF24"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Star 2 -->
                                <materialDesign:PackIcon Kind="Star" Width="12" Height="12" Margin="0,0,1,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource MutedForegroundBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=1}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFBBF24"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Star 3 -->
                                <materialDesign:PackIcon Kind="Star" Width="12" Height="12" Margin="0,0,1,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource MutedForegroundBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=2}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFBBF24"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Star 4 -->
                                <materialDesign:PackIcon Kind="Star" Width="12" Height="12" Margin="0,0,1,0">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource MutedForegroundBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=3}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFBBF24"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Star 5 -->
                                <materialDesign:PackIcon Kind="Star" Width="12" Height="12">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource MutedForegroundBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=4}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFBBF24"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Hide entire star group if no rating -->
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UserMetadata.Rating, Converter={x:Static conv:NullToVisibilityConverter.Instance}}" Value="Visible">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>

                            <!-- Pick Status -->
                            <Grid>
                                <!-- Picked Icon -->
                                <materialDesign:PackIcon Kind="Flag" Width="14" Height="14" 
                                                Foreground="#FF22C55E"
                                                ToolTip="Picked">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Pick}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Rejected Icon -->
                                <materialDesign:PackIcon Kind="Close" Width="14" Height="14" 
                                                Foreground="{StaticResource DestructiveBrush}"
                                                ToolTip="Rejected">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserMetadata.Pick}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            </Grid>
                        </StackPanel>

                        <!-- Tags Row -->
                        <ItemsControl Grid.Row="4" 
                              ItemsSource="{Binding UserMetadata.Tags}"
                              Margin="0,4,0,0">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserMetadata.Tags.Count, Converter={x:Static conv:IntegerGreaterThanConverter.Instance}, ConverterParameter=0}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8"
                                    Padding="6,2"
                                    Margin="0,0,4,2"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BorderBrush}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding ColorValue}"/>
                                        </Border.Background>
                                        <TextBlock Text="{Binding Name}" 
                                           Foreground="White"
                                           FontFamily="{StaticResource FontSans}"
                                           FontSize="10"
                                           FontWeight="Medium"
                                           MaxWidth="80"
                                           TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="4"
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Margin="8,0,0,0">

                        <!-- Show in Explorer Button -->
                        <Button x:Name="ShowInExplorerButton"
                        Style="{StaticResource icon-sm}"
                        ToolTip="Show in Explorer"
                        Click="ShowInExplorerButton_Click"
                        Tag="{Binding}"
                        Margin="0,0,4,0">
                            <TextBlock Text="📁" FontSize="12"/>
                        </Button>

                        <!-- Open with Default Program Button -->
                        <Button x:Name="OpenWithDefaultButton"
                        Style="{StaticResource icon-sm}"
                        ToolTip="Open with default program"
                        Click="OpenWithDefaultButton_Click"
                        Tag="{Binding}">
                            <TextBlock Text="▶" FontSize="12"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ListView Item Container Style -->
        <Style x:Key="ClipListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Margin="2"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource MutedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource RingBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource card}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,12"
                    CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🎥"
                                  FontSize="16"
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>

                        <TextBlock Text="Video Clips" 
                                  FontFamily="{StaticResource FontSans}"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  VerticalAlignment="Center"/>

                        <TextBlock x:Name="ClipCountLabel"
                                  Text="{Binding ClipCount, StringFormat='({0} clips)'}"
                                  FontFamily="{StaticResource FontSans}"
                                  FontSize="14"
                                  Foreground="{StaticResource MutedForegroundBrush}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"/>

                        <TextBlock x:Name="SelectedCountLabel"
                                  Text="{Binding SelectedClipCount, StringFormat='- {0} selected'}"
                                  FontFamily="{StaticResource FontSans}"
                                  FontSize="14"
                                  Foreground="{StaticResource AccentBrush}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedClipCount}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <Button Grid.Column="1"
                           x:Name="RefreshButton"
                           Click="RefreshButton_Click"
                           Style="{StaticResource icon}"
                           ToolTip="Refresh clips">
                        <TextBlock Text="🔄" FontSize="14"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Selection Controls -->
            <Border Grid.Row="1"
                    Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Selection Buttons -->
                    <Button Grid.Column="0"
                            x:Name="SelectAllButton"
                            Click="SelectAllButton_Click"
                            Style="{StaticResource secondary-sm}"
                            Margin="0,0,8,0"
                            ToolTip="Select all clips">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="☑" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Select All" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1"
                            x:Name="DeselectAllButton"
                            Click="DeselectAllButton_Click"
                            Style="{StaticResource secondary-sm}"
                            Margin="0,0,16,0"
                            ToolTip="Deselect all clips">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="☐" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Deselect All" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="4"
                            x:Name="AddToRenderQueueButton"
                            Click="AddToRenderQueueButton_Click"
                            Style="{StaticResource primary-sm}"
                            ToolTip="Open selected clips with default program">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Add to Render Queue" FontSize="12"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="2">
                <!-- Loading Indicator -->
                <Grid x:Name="LoadingPanel"
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                   Width="50" 
                                   Height="50"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Loading video clips..."
                                 FontFamily="{StaticResource FontSans}"
                                 FontSize="14"
                                 Foreground="{StaticResource MutedForegroundBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,16,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Empty State -->
                <Grid x:Name="EmptyPanel"
                      Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock Text="📹"
                                  FontSize="48"
                                  Foreground="{StaticResource MutedForegroundBrush}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.5"/>
                        <TextBlock Text="No video clips found"
                                 FontFamily="{StaticResource FontSans}"
                                 FontSize="16"
                                 FontWeight="Medium"
                                 Foreground="{StaticResource ForegroundBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,16,0,8"/>
                        <TextBlock Text="Select a folder containing video files with sidecar files"
                                 FontFamily="{StaticResource FontSans}"
                                 FontSize="14"
                                 Foreground="{StaticResource MutedForegroundBrush}"
                                 HorizontalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 MaxWidth="300"/>
                    </StackPanel>
                </Grid>

                <!-- Clips ListView -->
                <ListView x:Name="ClipsListView"
                         ItemsSource="{Binding VideoClips}"
                         SelectedItem="{Binding SelectedClip, Mode=TwoWay}"
                         ItemTemplate="{StaticResource VideoClipItemTemplate}"
                         ItemContainerStyle="{StaticResource ClipListViewItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         SelectionMode="Single"
                         SelectionChanged="ClipsListView_SelectionChanged"
                         Padding="8">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="3"
                    Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="16,8"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusLabel"
                              Grid.Column="0"
                              Text="{Binding StatusText}"
                              FontFamily="{StaticResource FontSans}"
                              FontSize="12"
                              Foreground="{StaticResource MutedForegroundBrush}"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FolderPath}"
                                 FontFamily="{StaticResource FontSans}"
                                 FontSize="12"
                                 Foreground="{StaticResource MutedForegroundBrush}"
                                 TextTrimming="CharacterEllipsis"
                                 MaxWidth="200"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>