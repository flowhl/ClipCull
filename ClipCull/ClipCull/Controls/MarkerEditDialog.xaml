<Window x:Class="ClipCull.Controls.MarkerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Marker" 
        Height="220" Width="400"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                  Text="Edit Marker Details" 
                  Foreground="White" 
                  FontSize="16" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"/>

        <!-- Marker Title -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                      Text="Title:" 
                      Foreground="White" 
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

            <TextBox x:Name="TitleTextBox" 
                    Grid.Column="1"
                    Background="#FF404040"
                    Foreground="White"
                    BorderBrush="#FF666666"
                    Padding="5"
                    MaxLength="100"/>
        </Grid>

        <!-- Timestamp -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                      Text="Time:" 
                      Foreground="White" 
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

            <TextBox x:Name="TimestampTextBox" 
                    Grid.Column="1"
                    Background="#FF404040"
                    Foreground="White"
                    BorderBrush="#FF666666"
                    Padding="5"
                    FontFamily="Consolas"
                    ToolTip="Format: HH:MM:SS.mmm"/>
        </Grid>

        <!-- Current Time Display -->
        <TextBlock Grid.Row="3" 
                  x:Name="CurrentTimeLabel"
                  Text="Current position: 00:00:00.000" 
                  Foreground="#FFCCCCCC" 
                  FontSize="11"
                  FontFamily="Consolas"
                  Margin="0,0,0,15"/>

        <!-- Spacer -->
        <Grid Grid.Row="4"/>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                   x:Name="DeleteButton"
                   Content="Delete"
                   Click="DeleteButton_Click"
                   Background="#FFCC4444"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="15,8"
                   Margin="0,0,10,0"
                   Style="{DynamicResource DialogButtonStyle}"/>

            <Button Grid.Column="2"
                   x:Name="CancelButton"
                   Content="Cancel"
                   Click="CancelButton_Click"
                   Background="#FF666666"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="15,8"
                   Margin="0,0,10,0"
                   Style="{DynamicResource DialogButtonStyle}"/>

            <Button Grid.Column="3"
                   x:Name="OkButton"
                   Content="OK"
                   Click="OkButton_Click"
                   Background="#FF007ACC"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="15,8"
                   IsDefault="True"
                   Style="{DynamicResource DialogButtonStyle}"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>